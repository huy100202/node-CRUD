<%- include('../layout/header'); %>
<div class="row row-offcanvas row-offcanvas-right">
  <div class="col-xs-12 col-sm-9">
    <div class="table-responsive">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>#</th>
            <th>Full name</th>
            <th>Email</th>
            <th>Password</th>
            <th>Address</th>
            <th>Photo</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% if(data) { %> <% for(let i = 0; i < data.length; i++) { %>
          <tr>
            <td width="12%"><%= data[i].id %></td>
            <td width="20%"><%= data[i].full_name %></td>
            <td width="10%"><%= data[i].email %></td>
            <td width="11%"><%= data[i].password %></td>
            <td width="15%"><%= data[i].address %></td>
            <td width="12%">
              <img
                src="<%='/upload/users/'+data[i].photo%>"
                alt="<%= data[i].email %>"
                class="wh-50"
              />
            </td>
            <td width="25%">
              <a
                class="btn btn-outline-info table-link"
                role="button"
                href="<%='/users/view?id='+data[i].id%>"
              >
                <i class="fa fa-eye" aria-hidden="true"></i>
              </a>
              <a
                class="btn btn-outline-warning"
                role="button"
                href="<%='/users/edit?id='+data[i].id%>"
              >
                <i class="fas fa-edit"></i>
              </a>
              <a
                class="btn btn-outline-danger table-link danger delete"
                role="button"
                href="<%='/users/delete?id='+data[i].id%>"
              >
                <i class="fas fa-trash"></i>
              </a>
            </td>
          </tr>
          <% }; %> <% } else { %>
          <tr>
            <td colspan="7" scope="row">There are no record!</td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="col-xs-6 col-sm-3 sidebar-offcanvas" id="sidebar">
    <%- include('../widgets/sidebar'); %>
  </div>
</div>
<%- include('../layout/footer'); %>
